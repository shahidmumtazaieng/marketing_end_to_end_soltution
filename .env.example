# =============================================================================
# FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_APP_NAME="Enterprise SAAS Platform"
NEXT_PUBLIC_APP_VERSION="2.0.0"

# =============================================================================
# BACKEND SERVICES CONFIGURATION
# =============================================================================

# Main Node.js Backend (Port 5000)
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# API Authentication
API_SECRET_KEY=dev-key-change-in-production

# =============================================================================
# PYTHON AI SERVICES CONFIGURATION
# =============================================================================

# AI Calling Agent Service (backend-python/services/ai_calling_agent - Port 8004)
NEXT_PUBLIC_AI_CALLING_AGENT_URL=http://localhost:8004
AI_CALLING_AGENT_URL=http://localhost:8004

# Voice Cloning Service (backend-python/services/voice_cloning - Port 8005)
NEXT_PUBLIC_VOICE_CLONING_SERVICE_URL=http://localhost:8005
VOICE_CLONING_SERVICE_URL=http://localhost:8005

# Python ML Engine (python-ml-engine - Port 8001)
NEXT_PUBLIC_PYTHON_ML_ENGINE_URL=http://localhost:8001
PYTHON_ML_ENGINE_URL=http://localhost:8001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# EXTERNAL API KEYS (Optional - for direct frontend calls)
# =============================================================================

# SerpAPI (for data scraping)
NEXT_PUBLIC_SERPAPI_KEY=your_serpapi_key_here

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your_google_maps_key_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
NODE_ENV=development

# Logging Level
NEXT_PUBLIC_LOG_LEVEL=info

# Enable Debug Mode
NEXT_PUBLIC_DEBUG=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production URLs (update for production deployment)
# NEXT_PUBLIC_API_URL=https://your-backend.vercel.app
# NEXT_PUBLIC_AI_CALLING_AGENT_URL=https://your-ai-calling-agent.railway.app
# NEXT_PUBLIC_VOICE_CLONING_SERVICE_URL=https://your-voice-cloning.railway.app
# NEXT_PUBLIC_PYTHON_ML_ENGINE_URL=https://your-ml-engine.railway.app
