{
  "name": "@saas-platform/vendor-backend",
  "version": "1.0.0",
  "description": "Vendor Backend Service - Order Management, Profile, Notifications, Referrals (Base44 SDK Compatible)",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "docker:build": "docker build -t saas-vendor-backend .",
    "docker:run": "docker run -p 3002:3002 saas-vendor-backend"
  },
  "keywords": [
    "vendor",
    "backend",
    "order-management",
    "profile-management",
    "notifications",
    "referrals",
    "base44-sdk",
    "mobile-app",
    "react-native",
    "microservices"
  ],
  "author": "SAAS Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "sharp": "^0.32.6",
    "form-data": "^4.0.0",
    "ws": "^8.14.2",
    "firebase-admin": "^11.11.1",
    "twilio": "^4.19.3",
    "puppeteer": "^21.6.1",
    "qrcode": "^1.5.3",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.11",
    "@types/pg": "^8.10.9",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/saas-platform.git",
    "directory": "packages/vendor-backend"
  },
  "bugs": {
    "url": "https://github.com/your-org/saas-platform/issues"
  },
  "homepage": "https://github.com/your-org/saas-platform#readme",
  "base44Compatible": true,
  "mobileAppSupport": {
    "reactNative": true,
    "ionic": true,
    "capacitor": true,
    "cordova": true
  },
  "apiCompatibility": {
    "orderManagement": "Order.list(), Order.update()",
    "profileManagement": "User.me(), User.updateMyUserData()",
    "notifications": "Real-time push notifications",
    "referrals": "Referral code management",
    "whatsapp": "WhatsApp Business API integration"
  }
}
